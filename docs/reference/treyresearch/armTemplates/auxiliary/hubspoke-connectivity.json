{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "topLevelManagementGroupPrefix": {
            "defaultValue": "ESLZ",
            "maxLength": 10,
            "type": "String",
            "metadata": {
                "description": "Provide a prefix (max 10 characters, unique at tenant-scope) for the Management Group hierarchy and other resources created as part of Enterprise-scale."
            }
        },
        "AddressPrefixForHubVirtualNetwork": {
            "defaultValue": "172.21.0.0/20",
            "type": "String",
            "metadata": {
                "description": "Specify the address prefix of the HUB virtual network."
            }
        },
        "AddressPrefixForSpoke1VirtualNetwork": {
            "defaultValue": "172.21.16.0/20",
            "type": "String",
            "metadata": {
                "description": "Specify the address prefix of the first spoke's virtual network."
            }
        },
        "AddressPrefixForSpoke2VirtualNetwork": {
            "defaultValue": "172.21.32.0/20",
            "type": "String",
            "metadata": {
                "description": "Specify the address prefix of the second spoke's virtual network."
            }
        },
        "location": {
            "defaultValue": "[deployment().location]",
            "type": "String",
            "metadata": {
                "displayName": "location",
                "description": "Location of the HUB"
            }
        },
        "EnableHub": {
            "defaultValue": "Yes",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "type": "String"
        },
        "EnableAzureFirewall": {
            "defaultValue": "Yes",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "type": "String"
        },
        "EnableVPNGateway": {
            "defaultValue": "Yes",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "type": "String"
        },
        "EnableERGateway": {
            "defaultValue": "Yes",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "type": "String"
        },
        "ConnectivitySubscriptionId": {
            "defaultValue": "86b43f63-af69-4372-920d-39f0ff5dff52",
            "maxLength": 36,
            "type": "String"
        },
        "VPNGatewayType": {
            "defaultValue": "RouteBased",
            "allowedValues": [
                "PolicyBased",
                "RouteBased"
            ],
            "type": "String"
        },
        "SubnetMaskForGatewaySubnet": {
            "defaultValue": "172.21.1.0/27",
            "type": "String",
            "metadata": {
                "description": "Specify the subnet mask for the Gateway subnet in the HUB virtual network."
            }
        },
        "SubnetMaskForDMZSubnet": {
            "defaultValue": "172.21.4.0/24",
            "type": "String",
            "metadata": {
                "description": "Specify the subnet mask for the DMZ subnet in the HUB virtual network."
            }
        },
        "SubnetMaskForIdentitySubnet": {
            "defaultValue": "172.21.5.0/24",
            "type": "String",
            "metadata": {
                "description": "Specify the subnet mask for the Identity subnet in the HUB virtual network."
            }
        },
        "SubnetMaskForAzureFirewallSubnet": {
            "defaultValue": "172.21.1.32/27",
            "type": "String",
            "metadata": {
                "description": "Specify the subnet mask for the Azure Firewall subnet in the HUB virtual network."
            }
        }
    },
    "variables": {
        "vpngwname": "[concat(parameters('topLevelManagementGroupPrefix'), '-vpngw-', parameters('location'))]",
        "erGwName": "[concat(parameters('topLevelManagementGroupPrefix'), '-ergw-', parameters('location'))]",
        "rgName": "[concat(parameters('topLevelManagementGroupPrefix'), '-connectivity')]",
        "hubName": "[concat(parameters('topLevelManagementGroupPrefix'), '-hub-', parameters('location'))]",
        "spoke1Name": "[concat(parameters('topLevelManagementGroupPrefix'), '-spoke1-', parameters('location'))]",
        "spoke2Name": "[concat(parameters('topLevelManagementGroupPrefix'), '-spoke2-', parameters('location'))]",
        "azVpnGwIpName": "[concat(variables('vpngwname'), '-pip')]",
        "azVpnGwSubnetId": "[concat('/subscriptions/', parameters('ConnectivitySubscriptionId'), '/resourceGroups/', variables('rgName'),'/providers/Microsoft.Network/virtualNetworks/', variables('hubname'), '/subnets/', variables('gatewaySubnetName'))]",
        "azFwName": "[concat(parameters('topLevelManagementGroupPrefix'), '-fw-', parameters('location'))]",
        "azErGwIpName": "[concat(variables('erGwName'), '-pip')]",
        "azVpnGwPipId": "[concat('/subscriptions/', parameters('ConnectivitySubscriptionId'), '/resourceGroups/', variables('rgName'), '/providers/Microsoft.Network/publicIPAddresses/', variables('azVpnGwIpName'))]",
        "azFwIpName": "[concat(variables('azFwName'), '-pip')]",
        "azErGwSubnetId": "[concat('/subscriptions/', parameters('ConnectivitySubscriptionId'), '/resourceGroups/', variables('rgName'),'/providers/Microsoft.Network/virtualNetworks/', variables('hubname'), '/subnets/', variables('gatewaySubnetName'))]",
        "azErGwPipId": "[concat('/subscriptions/', parameters('ConnectivitySubscriptionId'), '/resourceGroups/', variables('rgName'), '/providers/Microsoft.Network/publicIPAddresses/', variables('azErGwIpName'))]",
        "azFwSubnetId": "[concat('/subscriptions/', parameters('ConnectivitySubscriptionId'), '/resourceGroups/', variables('rgName'),'/providers/Microsoft.Network/virtualNetworks/', variables('hubname'), '/subnets/', variables('azureFirewallSubnetName'))]",
        "azFwPipId": "[concat('/subscriptions/', parameters('ConnectivitySubscriptionId'), '/resourceGroups/', variables('rgName'), '/providers/Microsoft.Network/publicIPAddresses/', variables('azFwIpName'))]",
        "resourceDeploymentName": "[take(concat(deployment().name, '-hubspoke'), 64)]",
        "gatewaySubnetName": "GatewaySubnet",
        "dmzSubnetName": "DMZSubnet",
        "identitySubnetName": "IdentSubnet",
        "azureFirewallSubnetName": "hub-azfirewall-subnet"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "name": "[concat('EntScale', '-connectivityHubSub')]",
            "location": "[deployment().location]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "type": "Microsoft.Resources/resourceGroups",
                            "apiVersion": "2020-10-01",
                            "location": "[deployment().location]",
                            "name": "[variables('rgName')]",
                            "properties": {}
                        },
                        {
                            "type": "Microsoft.Resources/deployments",
                            "apiVersion": "2020-10-01",
                            "name": "[variables('resourceDeploymentName')]",
                            "resourceGroup": "[variables('rgName')]",
                            "dependsOn": [
                                "[concat('Microsoft.Resources/resourceGroups/', variables('rgName'))]"
                            ],
                            "properties": {
                                "mode": "Incremental",
                                "template": {
                                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                                    "contentVersion": "1.0.0.0",
                                    "parameters": {},
                                    "resources": [
                                        {
                                            "name": "[variables('hubName')]",
                                            "type": "Microsoft.Network/virtualNetworks",
                                            "apiVersion": "2020-11-01",
                                            "location": "[parameters('location')]",
                                            "properties": {
                                                "addressSpace": {
                                                    "addressPrefixes": [
                                                        "[parameters('AddressPrefixForHubVirtualNetwork')]"
                                                    ]
                                                },
                                                "subnets": [
                                                {
                                                    "name": "[variables('gatewaySubnetName')]",
                                                    "properties": {
                                                        "addressPrefix": "[parameters('SubnetMaskForGatewaySubnet')]"
                                                    }
                                                },
                                                {
                                                    "name": "[variables('dmzSubnetName')]",
                                                    "properties": {
                                                        "addressPrefix": "[parameters('SubnetMaskForDMZSubnet')]"
                                                    }
                                                },
                                                {
                                                    "name": "[variables('identitySubnetName')]",
                                                    "properties": {
                                                        "addressPrefix": "[parameters('SubnetMaskForIdentitySubnet')]"
                                                    }
                                                }
                                                
                                            ]
                                            }
                                        },
                                        {
                                            "name": "[variables('spoke1Name')]",
                                            "type": "Microsoft.Network/virtualNetworks",
                                            "apiVersion": "2020-11-01",
                                            "location": "[parameters('location')]",
                                            "properties": {
                                                "addressSpace": {
                                                    "addressPrefixes": [
                                                        "[parameters('AddressPrefixForSpoke1VirtualNetwork')]"
                                                    ]
                                                }
                                            }
                                        },
                                        {
                                            "name": "[variables('spoke2Name')]",
                                            "type": "Microsoft.Network/virtualNetworks",
                                            "apiVersion": "2020-11-01",
                                            "location": "[parameters('location')]",
                                            "properties": {
                                                "addressSpace": {
                                                    "addressPrefixes": [
                                                        "[parameters('AddressPrefixForSpoke2VirtualNetwork')]"
                                                    ]
                                                }
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('EnableVPNGateway'), 'Yes'), not(empty(parameters('SubnetMaskForGatewaySubnet'))))]",
                                            "apiVersion": "2020-11-01",
                                            "type": "Microsoft.Network/publicIpAddresses",
                                            "location": "[parameters('location')]",
                                            "name": "[variables('azVpnGwIpName')]",
                                            "properties": {
                                                "publicIPAllocationMethod": "Dynamic"
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('EnableVPNGateway'), 'Yes'), not(empty(parameters('SubnetMaskForGatewaySubnet'))))]",
                                            "apiVersion": "2020-11-01",
                                            "name": "[variables('vpngwname')]",
                                            "type": "Microsoft.Network/virtualNetworkGateways",
                                            "location": "[parameters('location')]",
                                            "dependsOn": [
                                                "[concat('Microsoft.Network/publicIPAddresses/', variables('azVpnGwIpName'))]",
                                                "[concat('Microsoft.Network/virtualNetworks/', variables('hubName'))]",
                                                "GatewaySubnet",
                                                "DMZSubnet",
                                                "IdentSubnet"
                                            ],
                                            "properties": {
                                                "gatewayType": "Vpn",
                                                "vpnType": "[parameters('VPNGatewayType')]",
                                                "ipConfigurations": [
                                                    {
                                                        "name": "default",
                                                        "properties": {
                                                            "privateIPAllocationMethod": "Dynamic",
                                                            "subnet": {
                                                                "id": "[variables('azVpnGwSubnetId')]"
                                                            },
                                                            "publicIpAddress": {
                                                                "id": "[variables('azVpnGwPipId')]"
                                                            }
                                                        }
                                                    }
                                                ],
                                                "sku": {
                                                    "name": "VpnGw1",
                                                    "tier": "VpnGw1"
                                                }
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('EnableERGateway'), 'Yes'), not(empty(parameters('SubnetMaskForGatewaySubnet'))))]",
                                            "apiVersion": "2020-11-01",
                                            "type": "Microsoft.Network/publicIpAddresses",
                                            "location": "[parameters('location')]",
                                            "name": "[variables('azErGwIpName')]",
                                            "properties": {
                                                "publicIPAllocationMethod": "Dynamic"
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('EnableERGateway'), 'Yes'), not(empty(parameters('SubnetMaskForGatewaySubnet'))))]",
                                            "apiVersion": "2020-11-01",
                                            "name": "[variables('erGwName')]",
                                            "type": "Microsoft.Network/virtualNetworkGateways",
                                            "location": "[parameters('location')]",
                                            "dependsOn": [
                                                "[concat('Microsoft.Network/publicIPAddresses/', variables('azErGwIpName'))]",
                                                "[concat('Microsoft.Network/virtualNetworkGateways/', variables('vpngwname'))]",
                                                "[concat('Microsoft.Network/virtualNetworks/', variables('hubName'))]"
                                            ],
                                            "properties": {
                                                "gatewayType": "ExpressRoute",
                                                "ipConfigurations": [
                                                    {
                                                        "name": "default",
                                                        "properties": {
                                                            "privateIPAllocationMethod": "Dynamic",
                                                            "subnet": {
                                                                "id": "[variables('azErGwSubnetId')]"
                                                            },
                                                            "publicIpAddress": {
                                                                "id": "[variables('azErGwPipId')]"
                                                            }
                                                        }
                                                    }
                                                ],
                                                "sku": {
                                                    "name": "Standard",
                                                    "tier": "Standard"
                                                }
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('EnableAzureFirewall'), 'Yes'), not(empty(parameters('SubnetMaskForAzureFirewallSubnet'))))]",
                                            "apiVersion": "2020-11-01",
                                            "type": "Microsoft.Network/publicIpAddresses",
                                            "name": "[variables('azFwIpName')]",
                                            "location": "[parameters('location')]",
                                            "sku": {
                                                "name": "Standard"
                                            },
                                            "properties": {
                                                "publicIPAllocationMethod": "Static"
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('EnableAzureFirewall'), 'Yes'), not(empty(parameters('SubnetMaskForAzureFirewallSubnet'))))]",
                                            "apiVersion": "2020-11-01",
                                            "type": "Microsoft.Network/azureFirewalls",
                                            "name": "[variables('azfwname')]",
                                            "location": "[parameters('location')]",
                                            "dependsOn": [
                                                "[concat('Microsoft.Network/publicIpAddresses/', variables('azFwIpName'))]",
                                                "[concat('Microsoft.Network/virtualNetworks/', variables('hubName'))]"
                                            ],
                                            "properties": {
                                                "sku": {
                                                    "Name": "AZFW_VNet",
                                                    "Tier": "Standard"
                                                },
                                                "ipConfigurations": [
                                                    {
                                                        "name": "[variables('azFwIpName')]",
                                                        "properties": {
                                                            "subnet": {
                                                                "id": "[variables('azFwSubnetId')]"
                                                            },
                                                            "publicIPAddress": {
                                                                "id": "[variables('azFwPipId')]"
                                                            }
                                                        }
                                                    }
                                                ]
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            },
            "subscriptionId": "[parameters('ConnectivitySubscriptionId')]",
            "condition": "[and(equals(parameters('EnableHub'), 'Yes'), not(empty(parameters('ConnectivitySubscriptionId'))))]"
        }
    ]
}